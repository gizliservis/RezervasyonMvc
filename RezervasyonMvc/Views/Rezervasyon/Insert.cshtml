@model RezervasyonMvc.Model.Models.OtherModel.RezervasyonYap
@{
    var Title = "Oda Oluştur";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Rezervasyonlar.GrisTarihi">Giriş Tarihi</label>
                </div>
                <div class="col-8">
                    <input asp-for="Rezervasyonlar.GrisTarihi" class="form-control" />
                    <span asp-validation-for="Rezervasyonlar.GrisTarihi" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Rezervasyonlar.CikisTarihi"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Rezervasyonlar.CikisTarihi" class="form-control" />
                    <span asp-validation-for="Rezervasyonlar.CikisTarihi" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Rezervasyonlar.KisiSayisi"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Rezervasyonlar.KisiSayisi" class="form-control" />
                    <span asp-validation-for="Rezervasyonlar.KisiSayisi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">

                    <button type="submit" class="btn btn-primary form-control">Oda Güncelle</button>

                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
                </div>
            </div>
            <div class="form-group row">

                @for (int i = 0; i < Model.Rezervasyonlar.KisiSayisi; i++)

                {
                    <table class ="table table-striped border">
                        <tr class="table-secondary">
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th>Tc No</th>
                            <th>Doğum Tarihi</th>
                            <th>Adresi</th>
                        </tr>
                        <tr>
                            <td> <input asp-for="Musteriler.MusteriAdi" class="form-control" /></td>
                            <td> <input asp-for="Musteriler.MusteriSoyadi" class="form-control" /> </td>
                            <td> <input asp-for="Musteriler.TcNo" class="form-control" /> </td>
                            <td> <input asp-for="Musteriler.DogumTarihi" class="form-control" /> </td>
                            <td> <input asp-for="Musteriler.Adresi" class="form-control" /> </td>
                        </tr>

                    </table>
                   @* <div class="col-3 offset-3">
                        <label>@i</label>
                    </div>


                    <div class="col-3 ">
                        <label asp-for="Musteriler.MusteriAdi">Musteri Adı</label>
                        <input asp-for="Musteriler.MusteriAdi" class="form-control" />
                    </div>
                    <div class="col-2 ">
                        <label asp-for="Musteriler.MusteriSoyadi">Soyadı</label>
                        <input asp-for="Musteriler.MusteriSoyadi" class="form-control" />
                    </div>
                    <div class="col-2 ">
                        <label asp-for="Musteriler.TcNo">Tc No</label>
                        <input asp-for="Musteriler.TcNo" class="form-control" />
                    </div>
                    <div class="col-2 offset-2">
                        <label asp-for="Musteriler.DogumTarihi">Doğum Tarihi</label>
                        <input asp-for="Musteriler.DogumTarihi" class="form-control" />
                    </div>*@
                }


            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}





