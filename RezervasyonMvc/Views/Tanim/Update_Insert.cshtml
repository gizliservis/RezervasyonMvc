@model RezervasyonMvc.Model.Models.Tanim
@{
   // ViewData["Title"] = "Update_Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var Title = "Tanım Oluştur";
}
<form action="Update_Insert" method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @if (Model.Id != 0)
        {
            Title = "Tanım Düzenle";

        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Turu">Türü :</label>
                </div>
                <div class="col-8">
                    <input asp-for="Turu" class="form-control" />
                    <span asp-validation-for="Turu" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Tanimi">Tanımı :</label>
                </div>
                <div class="col-8">
                    <input asp-for="Tanimi" class="form-control" />
                    <span asp-validation-for="Tanimi" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Aciklama"> Açıklama :</label>
                </div>
                <div class="col-8">
                    <input asp-for="Aciklama" class="form-control" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Tanım Güncelle</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Tanım Oluştur</button>
                    }
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </div>

</form>

