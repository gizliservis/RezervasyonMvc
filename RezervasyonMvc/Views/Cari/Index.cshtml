@model IEnumerable<RezervasyonMvc.Model.Models.Cari>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-9">
            <h2 class="text-dark">Tanımlar Listesi</h2>
        </div>
        <div class="col-3 text-left">
            <a asp-action="Update_Insert" class="btn btn-info form-control">Yeni Oluştur</a>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-left">
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th></th>
                    <th></th>
                    <th>Id</th>
                    <th>CariKodu</th>
                    <th>CariAdı</th>
                    <th>FaturaÜnvanı</th>
                    <th>CariGrubu</th>
                    <th>İl</th>
                    <th>İlçe</th>
                    <th>Semt</th>
                    <th>VergiNo</th>



                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Update_Insert"
                       asp-route-Id="@item.Id">Düzenle</a>

                        </td>
                        <td>
                            <a class="btn btn-danger text-white" asp-action="Sil"
                       asp-route-Id="@item.Id">Sil</a>
                        </td>
                        <td>@item.Id</td>
                        <td>@item.CariKodu</td>
                        <td>@item.CariAdi</td>
                        <td>@item.FaturaUnvani</td>
                        <td>@item.CariGrubu</td>
                        <td>@item.Il</td>
                        <td>@item.Ilce</td>
                        <td>@item.Semt</td>
                        <td>@item.VergiNo</td>

                    </tr>

                }

            </table>
        }
        else
        {
            <p>Listelenecek Herhangi Bir Cari Bulunmadı</p>
        }
    </div>
</div>

